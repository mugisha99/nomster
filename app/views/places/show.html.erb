<div class="booyah-box col-xs-10 col-xs-offset-1">

	<h1><%= @place.name %></h1>
	<i><%= @place.address %>
	<br/><br/>
	<p><%= @place.description %></p>

	<% if @place.latitude.present? && @place.longitude.present? %>
		<%= render "places/placemap" %>
		<div id="map"></div>
	<% end %>

	<br />

	<div class="pull-right">
		<% if current_user && current_user == @place.user %>
			<%= link_to 'Edit', edit_place_path(@place), :class=>'btn btn-primary' %>

			<%= link_to 'Destroy', place_path(@place), :method=> :delete, 
				:data=>{:confirm => 'Are you sure you want to delete this?'},
				:class=>'btn btn-danger' %>

		<% end %>

	</div>
	<% @place.photos.each do |photo| %>
		<p><%= photo.caption %></p>
		<p><%= image_tag photo.picture %></p>
	<% end %>


</div>

<div class="clear"></div>

<!--Form to insert pictures will be here -->
<%= simple_form_for @photo, :url=>place_photos_path(@place)  do |f| %>
	<%= f.input :caption %>
	<%= f.input :picture %>

	<%= f.submit "Upload the picture", :class=>'btn btn-primary' %>
<% end %>


<%= render 'places/commentmodal' %>
<div class="col-xs-10 col-xs-offset-1">
	<h1 class="pull-left">Comments</h1>

	<button class="btn btn-primary btn-lg pull-right" data-toggle="modal" data-target="#myModal">
	  Add a comment
	</button>
</div>

<div class="clear"></div> 


<% @place.comments.each do |comment| %>
	<div class="col-xs-12 col-sm-6">
		<blockquote>
			<% if comment.humanized_rating.present? %>
				<b><%= comment.humanized_rating %></b>
			<% end %>
			<%= comment.message %>
			<small><%= comment.user.email %></small>
		</blockquote>
	</div>
<% end %>



